{
  "manifest_version": 3,
  "name": "PhishDetect",
  "version": "1.0",
  "description": "Detect phishing emails in Gmail",
  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": ["https://mail.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}